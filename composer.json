{
  "name": "glamdring/core",
  "type": "project",
  "description": "Core of Glamdring.",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "artesaos/seotools": "^0.22.1",
    "awcodes/filament-curator": "^0.3.2",
    "blade-ui-kit/blade-icons": "^1.3",
    "filament/filament": "^2.0",
    "guzzlehttp/guzzle": "^7.2",
    "http-interop/http-factory-guzzle": "^1.2",
    "itsgoingd/clockwork": "^5.1",
    "laravel/framework": "^9.19",
    "laravel/jetstream": "^2.10",
    "laravel/sanctum": "^2.14.1",
    "laravel/scout": "^9.4",
    "laravel/tinker": "^2.7",
    "livewire/livewire": "^2.10",
    "meilisearch/meilisearch-php": "^0.24.0",
    "tightenco/ziggy": "^1.4",
    "ueberdosis/tiptap-php": "^1.1"
  },
  "require-dev": {
    "barryvdh/laravel-ide-helper": "^2.12",
    "beyondcode/laravel-dump-server": "^1.8",
    "fakerphp/faker": "^1.9.1",
    "friendsofphp/php-cs-fixer": "^3.9",
    "laravel/pint": "^1.1",
    "laravel/sail": "^1.0.1",
    "laravel/telescope": "^4.9",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^6.1",
    "nunomaduro/larastan": "^2.1",
    "phpunit/phpunit": "^9.5.10",
    "spatie/laravel-ignition": "^1.0"
  },
  "autoload": {
    "files": [
      "app/helpers.php"
    ],
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php artisan optimize:clear",
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:models --nowrite --reset",
      "php artisan ide-helper:meta",
      "@php artisan ide-helper:eloquent",
      "@php artisan filament:upgrade"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "helper": [
      "pint",
      "@php artisan ide-helper:generate",
      "@php artisan ide-helper:models --nowrite --reset",
      "php artisan ide-helper:meta",
      "@php artisan ide-helper:eloquent"
    ],
    "format": [
      "pint"
    ],
    "format:classic": [
      "php-cs-fixer fix"
    ],
    "analyse": [
      "phpstan analyse --ansi"
    ],
    "fresh": [
      "@php artisan optimize:clear",
      "pint",
      "@php artisan migrate:fresh --seed"
    ],
    "test": [
      "@php artisan test"
    ],
    "test:filter": [
      "@php artisan test --filter"
    ],
    "test:watch": [
      "Composer\\Config::disableProcessTimeout",
      "phpunit-watcher watch"
    ],
    "test:filter:watch": [
      "Composer\\Config::disableProcessTimeout",
      "phpunit-watcher watch --filter"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "laravel/telescope"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
